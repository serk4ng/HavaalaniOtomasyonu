@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>

                </div>
                <div class="card-body">
                    <form>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.LabelFor(f => f.username)
                            @Html.TextBoxFor(f => f.username, new { @class = "form-control" })
                            @Html.ValidationMessageFor(f => f.username)
                            <label id="lblusernameHata" style="display:none;color:darkred">Username Giriniz!</label>

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @Html.LabelFor(f => f.password)
                            @Html.PasswordFor(f => f.password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(f => f.password)
                            <label id="lblpasswordHata" style="display:none;color:darkred">Password Giriniz!</label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn float-right login_btn" style="font-size:small" onclick="return BoslukKontrol()">Giriş</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        function BoslukKontrol() {
            var hatayok = true;
            if ($("#username").val() == "" || $("#password").val() == "") {
                $("#lblusernameHata").show();
                $("#lblpasswordHata").show();
                hatayok = false;
            }
            return hatayok;
        }
    </script>
}
