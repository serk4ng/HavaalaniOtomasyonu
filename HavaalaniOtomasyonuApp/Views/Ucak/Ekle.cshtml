    <br />
    <div class="container">
        <div class="d-flex justify-content-center h-100 ">
            <div class="card">
                <div class="card-header  bg-dark">
                    <h3 class="text-warning">Uçak Ekle</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                @Html.LabelFor(u => u.Ucak_Adi) :
