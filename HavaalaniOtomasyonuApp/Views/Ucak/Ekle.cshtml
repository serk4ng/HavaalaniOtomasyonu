@section scripts{
    <script>
        function BoslukKontrol() {
            var hatayok = true;
            if ($("#Ucak_Adi").val() == "" || $("#Kapasite").val() == "") {
                $("#lblucakAdiHata").show();
                $("#lblucakKapasiteHata").show();
                hatayok = false;
            }
            return hatayok;
        }
    </script>

}
